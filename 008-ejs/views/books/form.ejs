<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= books.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>
    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <input type="file"
               value="<%= books.fileBook %>"
               name="fileBook"
               class="form-control"
               id="inputFile"
               accept="application/pdf, text/plain, image/png, image/jpg, image/jpeg"
               />
    </div>
    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesc"
        ><%= books.desc %></textarea>
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>